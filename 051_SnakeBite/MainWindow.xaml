<Window x:Class="_051_SnakeBite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_051_SnakeBite"
        mc:Ignorable="d"
        Title="뱀이 문다" Height="350" Width="525">
    <Grid>
        <Image Source="Images/Tulips.jpg" Stretch="Fill"></Image>
        <TextBlock Margin="20,20, 300, 300">SnakeBite</TextBlock>
        <TextBlock Margin="20,35, 300, 280">Eat 25 Eggs using Arrow Keys</TextBlock>
        <TextBlock Margin="20,50, 300, 260">Press ESC to pause while playing</TextBlock>
        <Button x:Name="btnPlay" Width="100" Height="50" Click="btnPlay_Click" HorizontalAlignment="Left" Margin="120,200,0,0"  FontSize="20" Content="Play"></Button>
        <Button x:Name="btnQuit" Width="100" Height="50" Click="btnQuit_Click" HorizontalAlignment="Left" Margin="300,200,0,0"  FontSize="20" Content="Quit"></Button>

    </Grid>
</Window>
