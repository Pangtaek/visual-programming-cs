<Window x:Class="_051_SnakeBite.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_051_SnakeBite"
        mc:Ignorable="d"
        Title="Game" Height="380" Width="480" KeyDown="Window_KeyDown">
    <Canvas x:Name="field" Width="480" Height="380" Background="LightSteelBlue">
        <TextBlock x:Name="txtScore" Margin="10" Canvas.Left="200">Score = 0</TextBlock>
        <TextBlock x:Name="txtTime" Margin="10" Canvas.Left="270"></TextBlock>
    </Canvas>
</Window>
